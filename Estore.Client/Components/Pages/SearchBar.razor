@typeparam T

<input class="form-control" style="min-width: 20rem;max-width:30rem; margin:10px; border-radius: 10px; padding: 10px;" @bind="searchItem" placeholder="What are you looking for?" />
<button class="form-control" style="max-width:20rem; padding: 10px;" @onclick=OnSearchClicked>Search</button>

@code {

    [Parameter]
    public List<T> Items { get; set; }

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private string searchItem;

    private async Task OnSearchClicked()
    {
        await OnSearch.InvokeAsync(searchItem);
    }
}
